<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="8dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="#E6E6E6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/classroomImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_virtual_classroom_list" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/className"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="0"
                    android:fontFamily="@font/opensansextrabold"
                    android:maxLines="1"
                    android:text="className"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/classGrade"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="0"
                    android:fontFamily="@font/opensansextrabold"
                    android:maxLines="1"
                    android:paddingStart="4dp"
                    android:text="classGrade"
                    android:textSize="12sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/bookAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/opensansregular"
                android:maxLines="3"
                android:paddingLeft="8dp"
                android:text="classDesc"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/classStudents"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="0"
                    android:fontFamily="@font/opensansregular"
                    android:maxLines="1"
                    android:paddingLeft="8dp"
                    android:text="classStudents"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/classBooks"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="0"
                    android:fontFamily="@font/opensansregular"
                    android:maxLines="1"
                    android:paddingLeft="8dp"
                    android:text="classBooks"
                    android:textSize="12sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/classTeacher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/opensansregular"
                android:paddingLeft="8dp"
                android:text="classTeacher"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>