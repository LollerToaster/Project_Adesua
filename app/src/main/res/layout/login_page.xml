<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.adrianangub.project_adesua.LoginPage">

    <!-- Background Picture-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:contentDescription="Background"
        android:scaleType="centerCrop"
        android:src="@drawable/library" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <!-- Background Color -->
        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="400dp"
            android:layout_marginBottom="120dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginTop="80dp"
            android:background="@color/background_Color"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/appName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="false"
                android:contentDescription='android:textColor="subtext_Color"'
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:paddingTop="0dp"
                android:text="[ Project Adesua ]"
                android:textColor="@color/subtext_Color"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="96dp"
                android:layout_marginTop="35dp"
                android:orientation="vertical"
                android:weightSum="4">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/freeroadbold"
                    android:paddingBottom="4dp"
                    android:text="Username:"
                    android:textColor="@color/bright_Color_Light" />

                <EditText
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:contentDescription="Username"
                    android:ems="10"
                    android:fontFamily="sans-serif-condensed"
                    android:inputType="text|textNoSuggestions"
                    android:paddingStart="5dp"
                    android:textColor="@color/bright_Color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/freeroadbold"
                    android:paddingBottom="4dp"
                    android:text="Password:"
                    android:textColor="@color/bright_Color_Light" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:autoText="true"
                    android:background="@drawable/border"
                    android:contentDescription="Password"
                    android:contextClickable="false"
                    android:ems="10"
                    android:fontFamily="sans-serif-condensed"
                    android:inputType="textPassword"
                    android:paddingStart="5dp"
                    android:textColor="@color/bright_Color"
                    android:textSize="16sp"
                    android:textStyle="italic" />
            </LinearLayout>

            <Button
                android:id="@+id/loginButton"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:background="@color/bright_Color"
                android:contentDescription="Login Button"
                android:gravity="center"
                android:text="Login"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/forgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="false"
                android:contentDescription="Forgot Password Button"
                android:gravity="center"
                android:paddingTop="4dp"
                android:text="Forgot Password?"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="75dp"
                android:contentDescription="Footer"
                android:gravity="bottom|center"
                android:text="Placeholder Ecks Dee Â© 2018"
                android:textColor="@color/subtext_Color" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>

