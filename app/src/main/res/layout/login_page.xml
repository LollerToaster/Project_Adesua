<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.adrianangub.project_adesua.LoginPage">

    <!-- Background Picture XD haha XD XD-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:alpha="1"
        android:contentDescription="Background"
        android:scaleType="centerCrop"
        android:src="@drawable/library" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <!-- Background Color -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="32dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="32dp"
            android:background="@color/primary"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="12dp"
            android:paddingLeft="56dp"
            android:paddingRight="56dp"
            android:paddingTop="12dp">

            <ImageView
                android:layout_width="256dp"
                android:layout_height="256dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/adesua" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="4">

                <!--<TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/freeroadlight"
                    android:paddingBottom="4dp"
                    android:text="Username:"
                    android:textColor="@color/fontColor1" />-->

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/usernameLogin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-condensed"
                    android:hint="Username"
                    android:inputType="text"
                    android:textColor="@color/fontColor1"
                    android:textColorLink="@color/fontColor1"
                    android:textSize="20sp"
                    app:met_baseColor="@color/fontColor1"
                    app:met_clearButton="true"
                    app:met_floatingLabel="highlight"
                    app:met_floatingLabelAlwaysShown="false"
                    app:met_floatingLabelAnimating="true"
                    app:met_floatingLabelText="Username"
                    app:met_floatingLabelTextSize="16dp"
                    app:met_iconPadding="16dp"
                    app:met_primaryColor="@android:color/white"
                    app:met_underlineColor="@color/common_google_signin_btn_text_dark_focused" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/passwordLogin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-condensed"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColor="@color/fontColor1"
                    android:textColorLink="@color/fontColor1"
                    android:textSize="20sp"
                    app:met_baseColor="@color/fontColor1"
                    app:met_clearButton="true"
                    app:met_floatingLabel="highlight"
                    app:met_floatingLabelAlwaysShown="false"
                    app:met_floatingLabelAnimating="true"
                    app:met_floatingLabelText="Password"
                    app:met_floatingLabelTextSize="16dp"
                    app:met_iconPadding="16dp"
                    app:met_primaryColor="@android:color/white"
                    app:met_underlineColor="@color/common_google_signin_btn_text_dark_focused" />


                <!--<EditText
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/border"
