<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/primary">

    <LinearLayout
        android:id="@+id/newReleases"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/primary"
        android:orientation="vertical"
        android:paddingTop="16dp">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="216dp"
            android:layout_height="288dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/book_sample_1" />

        <TextView
            android:id="@+id/bookNumber"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/imageView5"
            android:layout_gravity="center"
            android:fontFamily="@font/opensansregular"
            android:gravity="center"
            android:maxLines="1"
            android:text="Book Number"
            android:textColor="@color/fontColor1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/bookTitle"
            android:layout_width="216dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/imageView5"
            android:layout_gravity="center"
            android:layout_toLeftOf="@+id/date"
            android:layout_toRightOf="@+id/text"
            android:ellipsize="end"
            android:fontFamily="@font/opensansregular"
            android:gravity="center"
            android:maxLines="1"
            android:text="Book Title"
            android:textColor="@color/fontColor1"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/bookAuthor"
            android:layout_width="216dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/imageView5"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/opensansitalic"
            android:gravity="center"
            android:maxLines="1"
            android:text="Book Author"
            android:textColor="@color/fontColor1"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/bookSynopsis"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/imageView5"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/opensansitalic"
            android:gravity="center"
            android:maxLines="1"
            android:text="Book Author"
            android:textColor="@color/fontColor1"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/bookRating"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/imageView5"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/opensansitalic"
            android:gravity="center"
            android:maxLines="1"
            android:text="Book Author"
            android:textColor="@color/fontColor1"
            android:textSize="12sp"
            android:visibility="gone" />

    </LinearLayout>
</android.support.v7.widget.CardView>